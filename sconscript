
AddOption('--prefix', dest='prefix', type='string', nargs=1, action='store',
        metavar='DIR', default='/usr/local', help='installation prefix')

env = Environment(PREFIX = GetOption('prefix'))
Export('env')

env['CFLAGS'] = ['-ggdb']

# Local host based stuff
SConscript('scons/local')

# The main program
SConscript('src/consoler/sconscript')
SConscript('src/filler/sconscript')
SConscript('src/fonter/sconscript')
SConscript('src/pdfer/sconscript')
SConscript('src/pnger/sconscript')
SConscript('src/sdlcsr/sconscript')

SConscript('src/sconscript')
SConscript('src/termer/sconscript')

env.Alias('install', '$PREFIX')

