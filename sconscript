
env = Environment(CPPPATH=[], LIBPATH=[], LIBS=[])
Export('env')

env['CFLAGS'] = ['-ggdb']

env['COMPONENTS'] = [
        'boxer', 'consoler', 'filler', 'fonter', 
        'green', 'pdfer', 'pnger', 'sdlcsr', 'termer'
        ]

# configuration
SConscript('config/config')

# Build each of the components
for comp in env['COMPONENTS']:
    SConscript('src/%s/sconscript' % comp)

env.Alias('install', '$PREFIX')

