
env = Environment(
        tools=['ar', 'gcc', 'g++', 'link', 'textfile'],
        CPPPATH=[],
        LIBPATH=[],
        LIBS=[]
        )

Export('env')

env['CFLAGS'] = ['-ggdb']

# configuration
tobuild = SConscript('config/config')

# Build each of the components
for comp in tobuild:
    SConscript('src/%s/sconscript' % comp)

env.Alias('install', '$PREFIX')

