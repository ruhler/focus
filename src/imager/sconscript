#vim: ft=python

Import('env')

imager = env.Program('imager', ['imagermain.c', 'imager.c', 'pnger.c', 'jpeger.c'],
        LIBS=['png', 'jpeg', 'consoler'])
Default(imager)

imagertest = env.Program('imagertest', 'imagertest.c', LIBS=['jpeg', 'png', 'consoler'])
Default(env.Command('imagertest.out', [imagertest, imager, 'green.png'], "$SOURCES > $TARGET"))

env['PROGRAMDOC']('imager')
env.Install("$PREFIX/bin", imager)

