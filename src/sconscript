
# vim: ft=python

Import('env')
#env['CFLAGS'] = ['-ggdb']
#env['CFLAGS'] = ['-pg', '-fprofile-arcs', '-ftest-coverage']
#env['LINKFLAGS'] = ['-pg', '-fprofile-arcs', '-ftest-coverage']

ccl_o = env.Object('ccl.o', 'ccl.c')
csr_o = env.Object('csr.o', 'csr.c')

sdlcsr = env.Program('sdlcsr', ['sdlcsr.c', csr_o, ccl_o], LIBS = ['SDL', 'util']);
env.Default(sdlcsr);

boxer = env.Program('boxer', ['boxer.c', ccl_o])
env.Default(boxer)

pnger = env.Program('pnger', ['pnger.c', ccl_o], LIBS = ['png'])
env.Default(pnger)

sgreen = env.Program('sgreen', ['sgreen.c', ccl_o, csr_o], LIBS = ['pthread']);
env.Default(sgreen);

cgreen = env.Program('cgreen', ['cgreen.c']);
env.Default(cgreen);

